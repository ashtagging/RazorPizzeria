@page 
@model RazorPizzeria.Pages.PizzaModel 
@{  

}

<div class="text-center">
    <div class="main-text">
        <h1 class="display-4 text-capitalize text-black">Our Great Selection of Pizzas!</h1>
        <h4>Choose one, or try our great pizza builder!</h4>
        <h4>There's No need to give any details!</h4>
        <p class="small-text"><i>Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 make-own-div">
                    <div class="col-4 ">
                        <img src="~/images/Pizzas/Create.png" class="w-100" alt="">
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle make-own-text">
                            <h3 class="align-text-left">Create Your Own Pizza</h3>
                            <p class="align-text-left">Make your own pizza with our pizza maker!</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try Now!</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach(var pizza in Model.PizzaDB)
            {
                var imgPath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
                <div class="col-4 mb-5">
                    <a class="" asp-area="" asp-page="Checkout/Checkout"
                   asp-route-ImageTitle="@pizza.ImageTitle"
                   asp-route-PizzaPrice="@pizza.FinalPrice"><img src="@imgPath" class=" pizza-tile w-100" asp-append-version="true"></a>
                    <br />
                </div>
            }
        </div>
    </div>
</div>